{
  "extends": "../tsconfig.json", 
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
  
}
