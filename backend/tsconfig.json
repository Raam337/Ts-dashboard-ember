{
  "extends": "../tsconfig.json", 
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }

  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
  
}
